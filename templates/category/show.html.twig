{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">retourner à la liste</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">modifier</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
