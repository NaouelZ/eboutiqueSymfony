{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site </h1>
    <div class="alert alert-dismissible alert-danger">
    J'ai volontairement laissé le champ admin visible pour faciliter les tests !
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_row(form.Name, {'label': 'Nom'}) }}
    {{ form_row(form.FirstName, {'label': 'Prénom'})}}
    {{ form_row(form.Email, {'label': 'Adresse email'}) }}
    {{ form_row(form.Password, {'label': 'Mot de passe'}) }}
    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}

{% endblock %}